---
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import '../styles/global.css'
import FloatingWhatsApp from '../components/FloatingWhatsApp.astro'
import { SEO } from '../data/seo'

interface Props {
  title?: string
  description?: string
}

const { title, description } = Astro.props as Props

const pageTitle = title ?? SEO.meta.title
const pageDescription = description ?? SEO.meta.description
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    <meta name="author" content={SEO.identity.siteName} />
    <meta name="theme-color" content="#ffffff" />

    <meta name="robots" content="index,follow" />
    <link rel="canonical" href={Astro.url.href} />

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=AW-17790061115"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || []
      function gtag() {
        dataLayer.push(arguments)
      }
      gtag('js', new Date())
      gtag('config', 'AW-17790061115')
    </script>
  </head>

  <body class="min-h-screen bg-white text-gray-800 antialiased">
    <header>
      <Header />
    </header>
    <FloatingWhatsApp />

    <main class="min-h-[70vh]">
      <slot />
    </main>

    <footer>
      <Footer />
    </footer>
  </body>
</html>
