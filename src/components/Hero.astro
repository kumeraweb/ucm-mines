---
import { site } from '../data/site'
const waHref = `https://wa.me/${site.whatsapp}?text=${encodeURIComponent(site.cta.whatsappMessage)}`
const phoneHref = `tel:${site.phone}`
---

<section id="inicio" class="w-full bg-gray-50 border-b border-gray-200 py-0">
  <div class="w-full grid grid-cols-1 md:grid-cols-2">
    <!-- Texto -->
    <div class="flex flex-col justify-center px-6 py-20">
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 leading-tight mb-4">
        {site.hero.headline}
      </h1>

      <p class="text-gray-600 text-lg leading-relaxed mb-8">
        {site.hero.subheadline}
      </p>

      <div class="flex flex-col sm:flex-row gap-3">
        <a
          href={waHref}
          class="px-6 py-3 bg-green-600 text-white rounded-full font-medium hover:bg-green-700 transition text-center"
        >
          ðŸ“² WhatsApp
        </a>

        <a
          href={phoneHref}
          class="px-6 py-3 bg-blue-600 text-white rounded-full font-medium hover:bg-blue-700 transition text-center"
        >
          ðŸ“ž Llamar
        </a>
      </div>
    </div>

    <!-- Imagen como background -->
    <div
      class="h-80 md:h-auto bg-cover bg-center"
      style="background-image: url('/ambulance.webp');"
    >
    </div>
  </div>
</section>
