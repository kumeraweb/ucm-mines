---
import { SEO } from '../data/seo'

const waHref = `https://wa.me/${SEO.identity.contact.whatsapp}?text=${encodeURIComponent(
  'Hola, quisiera recibir asesoría sobre planes de rescate en ambulancia privada'
)}`

const phoneHref = `tel:${SEO.identity.contact.phone}`
---

<section id="inicio" class="relative w-full border-b border-gray-200 bg-gray-50 md:bg-transparent">
  <!-- Background image only on mobile -->
  <div
    class="absolute inset-0 bg-cover bg-center md:hidden"
    style="background-image: url('/ambulance.webp');"
    aria-hidden="true"
  >
    <div class="absolute inset-0 bg-black/50"></div>
  </div>

  <div class="relative grid grid-cols-1 md:grid-cols-2 min-h-[80vh]">
    <!-- CONTENIDO SEMÁNTICO -->
    <div
      class="flex flex-col justify-center px-6 md:px-12 py-16
             text-white md:text-gray-900"
    >
      <!-- H1 SEO PRINCIPAL -->
      <h1
        class="text-4xl md:text-5xl font-extrabold text-white md:text-gray-900 leading-tight mb-6"
      >
        Contrata planes de rescate Coronaria Movil
      </h1>

      <!-- INTENCIÓN PRIMARIA -->
      <h2 class="text-xl md:text-2xl text-gray-200 md:text-gray-700 mb-6">
        Ingrese hoy a Rescate Emergencia 24/7
      </h2>

      <!-- SOPORTE SEMÁNTICO -->
      <p class="text-gray-200 md:text-gray-600 text-lg leading-relaxed mb-10">
        <span class="font-extrabold text-2xl">Su Ejecutiva la Espera</span>. Reciba orientación
        clara para contratar el plan que mejor se adapte a tu familia o adulto mayor.
      </p>

      <!-- CTAs -->
      <div class="flex flex-col sm:flex-row gap-4">
        <a
          href={waHref}
          class="px-6 py-3 bg-green-600 text-white rounded-full font-medium hover:bg-green-700 transition text-center"
        >
          Contactar por WhatsApp
        </a>

        <a
          href={phoneHref}
          class="px-6 py-3 bg-blue-600 text-white rounded-full font-medium hover:bg-blue-700 transition text-center"
        >
          Llamar ahora
        </a>
      </div>
    </div>

    <!-- IMAGEN -->
    <div
      class="relative hidden md:block bg-cover bg-center"
      style="background-image: url('/ambulance.webp');"
      aria-hidden="true"
    >
      <div class="absolute inset-0 bg-black/10"></div>
    </div>
  </div>
</section>
