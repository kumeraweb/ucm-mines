---
import { SEO } from '../data/seo'

const waHref = `https://wa.me/${SEO.identity.contact.whatsapp}?text=${encodeURIComponent(
  'Hola, quisiera recibir asesoría sobre planes de rescate en ambulancia privada'
)}`

const phoneHref = `tel:${SEO.identity.contact.phone}`
---

<section id="inicio" class="w-full bg-gray-50 border-b border-gray-200">
  <div class="grid grid-cols-1 md:grid-cols-2 min-h-[80vh]">
    <!-- CONTENIDO SEMÁNTICO -->
    <div class="flex flex-col justify-center px-6 md:px-12 py-16">
      <!-- H1 SEO PRINCIPAL -->
      <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 leading-tight mb-6">
        {SEO.headings.h1}
      </h1>

      <!-- INTENCIÓN PRIMARIA -->
      <h2 class="text-xl md:text-2xl text-gray-700 mb-6">
        {SEO.primaryIntent}
      </h2>

      <!-- SOPORTE SEMÁNTICO -->
      <p class="text-gray-600 text-lg leading-relaxed mb-10">
        {SEO.semanticSupport.slice(0, 3).join(' · ')}
      </p>

      <!-- CTAs -->
      <div class="flex flex-col sm:flex-row gap-4">
        <a
          href={waHref}
          class="px-6 py-3 bg-green-600 text-white rounded-full font-medium hover:bg-green-700 transition text-center"
        >
          Asesoría por WhatsApp
        </a>

        <a
          href={phoneHref}
          class="px-6 py-3 bg-blue-600 text-white rounded-full font-medium hover:bg-blue-700 transition text-center"
        >
          Llamar ahora
        </a>
      </div>
    </div>

    <!-- IMAGEN -->
    <div
      class="relative bg-cover bg-center"
      style="background-image: url('/ambulance.webp');"
      aria-hidden="true"
    >
      <div class="absolute inset-0 bg-black/10"></div>
    </div>
  </div>
</section>
